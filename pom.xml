                            <md5>${chromedriver.md5.linux64}</md5>
                          </configuration>
                        </execution>
                        <execution>
                          <id>download-googlechrome-webdriver4mac</id>
                          <phase>compile</phase>
                          <goals>
                            <goal>wget</goal>
                          </goals>
                          <configuration>
                            <unpack>true</unpack>
                            <url>https://chromedriver.storage.googleapis.com/${chrome.version}/chromedriver_mac64.zip</url>
                            <outputDirectory>src/test/resources/drivers/mac/googlechrome/64bit/</outputDirectory>
                            <md5>${chromedriver.md5.mac64}</md5>
                          </configuration>
                        </execution>
                        <execution>
                                <id>download-geckodriver-webdriver4win</id>
                            <phase>compile</phase>
                            <goals>
