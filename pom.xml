                                    <mainClass>noraui.indus.Counter</mainClass>
                                    <arguments>
                                        <argument>Excel</argument>
                                    </arguments>
                                    <cleanupDaemonThreads>false</cleanupDaemonThreads>
                                    <systemProperties>
                                        <systemProperty>
                                            <key>resourcespath</key>
                                            <value>${jenkinsresourcespath}</value>
                                        </systemProperty>
                                    </systemProperties>
                                </configuration>
